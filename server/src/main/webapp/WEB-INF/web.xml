<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>task</servlet-name>
        <servlet-class>studentsync.domains.TaskServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>studentsync.domains.ListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>diff</servlet-name>
        <servlet-class>studentsync.domains.DiffServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sync</servlet-name>
        <servlet-class>studentsync.domains.SyncServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>settings</servlet-name>
        <servlet-class>studentsync.domains.SettingsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>task</servlet-name>
        <url-pattern>/task</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>diff</servlet-name>
        <url-pattern>/diff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sync</servlet-name>
        <url-pattern>/sync</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>settings</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
